// ---------------
// Global Settings
// ---------------

@import '_material-color'


// Default font settings
$font-stack = 'Roboto', "Helvetica Neue", HelveticaNeue, Helvetica, Arial, sans-serif
$font-size = 16
$font-color = #333
monospace = unquote("'Roboto Mono', 'Bitstream Vera Sans Mono', Consolas, Courier, monospace")

navbar-background-color = #FFF

background-color = #FFF

nav-height = 6em
nav-spacing = 1em
nav-line-height = 0.3em
nav-top-buffer = nav-spacing
inner-nav-height = nav-height - nav-spacing * 2 - nav-line-height
footer-height = 3.3em

rupture.scale = 0 480px 768px 992px 1200px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'

typography()
	bold-italic()
	headers()
	lists()
	text-selection()

	p
		paragraph()

	small
		small()

	blockquote
		blockquo()

	.hyphenation
		hyphenation()
