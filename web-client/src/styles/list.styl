@import '_settings'

$content-width = 1200px
.list
	flex 1 0
	display flex
	flex-direction column
	width $content-width
	margin 52px 0 0 0
	align-self: center
	.toolbar
		position fixed
		width $content-width + 24px
		z-index 100
		top 52px
		margin-left -12px
		card()
		display flex
		justify-content space-between
		.actions
				display flex
		.new, a.action
			button(crisp-primary)
			line-height 36px
			margin 8px
			padding 0 22px
			height 36px

		.search
			margin-left 16px
			line-height 52px
			vertical-align middle
			i
				vertical-align middle
			input
				input(crisp-primary)

	table
		card()
		table()
		border-collapse: collapse
		border-spacing: 0
		tr
			cursor pointer

			&:hover
				background-color $clr-grey-200
		td, th
			height 32px
