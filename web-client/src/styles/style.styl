@import '_settings'
variables()
normalize-css()
base()
typography()
components()

a
	color $crisp-primary
	text-decoration none

html, body, #v-app
	margin 0
	height 100%
	overflow hidden

body
	background-color $clr-grey-100

#v-app
	display flex
	flex-direction column

.details
	card()
	width 1200px
	margin 0 auto

.details-edit #save
	button-style(color: $clr-success)
